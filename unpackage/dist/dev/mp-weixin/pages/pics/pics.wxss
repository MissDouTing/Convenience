page {
  height: 100%;
}
.pics {
  display: flex;
  height: 100%;
}
.pics .left {
  /*vw 和 vh : 1vw = 屏幕宽度的百分之一
	             1vh = 屏幕高度的百分之一*/
  height: 100%;
  width: 200rpx !important;
}
.pics .left .item {
  text-align: center;
  height: 120rpx;
  background: #eee;
  line-height: 120rpx;
}
.pics .left .active {
  background: pink;
}
.pics .right {
  /*vw 和 vh : 1vw = 屏幕宽度的百分之一
		         1vh = 屏幕高度的百分之一*/
  height: 100%;
  flex: 1;
}
.pics .right .item {
  width: 100%;
  margin-top: 20rpx;
}
.pics .right .item image {
  width: 100%;
}

