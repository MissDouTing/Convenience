.goods swiper {
  height: 562rpx;
}
.goods swiper image {
  width: 100%;
  height: 562rpx;
}
.goods .good_info {
  padding: 10px;
}
.goods .good_info .price {
  font-size: 35rpx;
  color: pink;
  line-height: 80rpx;
}
.goods .good_info .price text:nth-child(2) {
  color: #ccc;
  font-size: 28rpx;
  text-decoration: line-through;
  margin-left: 20rpx;
}
.goods .good_info .goods_title {
  font-size: 32rpx;
  line-height: 60rpx;
}
.goods .good_detail {
  padding-bottom: 50px;
}
.goods .good_detail .tit {
  font-size: 32rpx;
  padding-left: 10px;
  border-bottom: 1px solid #eee;
  line-height: 70rpx;
}
.goods .good_detail .content {
  padding: 10px;
  font-size: 28rpx;
  color: #333;
  line-height: 50rpx;
}
.goods .goodnav {
  position: fixed;
  z-index: 100;
  bottom: 0;
  width: 100%;
}

