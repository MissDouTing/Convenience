.goods_list {
  display: flex;
  padding: 0 15rpx;
  justify-content: space-between;
  overflow: hidden;
  flex-wrap: wrap;
}
.goods_list .goods_item {
  width: 355rpx;
  margin-bottom: 15rpx;
  background: #fff;
  padding: 10px;
  box-sizing: border-box;
}
.goods_list .goods_item image {
  height: 150px;
  width: 100%;
  mix-width: 160px;
  margin: 10px auto;
}
.goods_list .goods_item .price {
  font-size: 18px;
  color: red;
  padding: 8px 0;
}
.goods_list .goods_item .price text:nth-child(2) {
  color: #ccc;
  text-decoration: line-through;
  margin-left: 10px;
  font-size: 13px;
}
.goods_list .goods_item .name {
  font-size: 14px;
}

